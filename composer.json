{
    "name": "sitedyno/phergie-fortune",
    "description": "Phergie plugin for displaying a fortune in channel",
    "keywords": [ "phergie", "irc", "bot", "plugin" ],
    "license": "MIT",
    "authors": [
        {
            "name": "Heath Nail",
            "email": "sitedyno@gmail.com",
            "homepage": "https://github.com/sitedyno",
            "role": "Developer"
        }
    ],
    "support": {
        "email": "sitedyno@gmail.com",
        "irc": "irc://irc.freenode.net/phergie",
        "issues": "https://github.com/sitedyno/phergie-fortune/issues",
        "source": "https://github.com/sitedyno/phergie-fortune"
    },
    "require": {
        "phergie/phergie-irc-bot-react": "~2",
        "phergie/phergie-irc-plugin-react-command": "~2.0",
        "react/child-process": "^0.4.3"

    },
    "require-dev": {
        "phpunit/phpunit": "4.5.*",
        "phake/phake": "^2.3",
        "squizlabs/php_codesniffer": "^2.8"
    },
    "suggest": {
        "phergie/phergie-irc-plugin-react-commandhelp": "provides interactive help for commands"
    },
    "autoload": {
        "psr-4": {
            "Sitedyno\\PhergieFortune\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Sitedyno\\PhergieFortune\\Tests\\": "tests"
        }
    },
    "scripts": {
      "cs-check": "phpcs --colors -p --standard=PSR1,PSR2 src/ tests/"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    }
}
